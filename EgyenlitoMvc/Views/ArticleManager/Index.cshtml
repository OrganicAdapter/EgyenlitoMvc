@model IEnumerable<EgyenlitoMvc.Models.Article>

@{
    ViewBag.Title = "Index";
}

<h2>Cikkek</h2>

<p>
    @Html.ActionLink("Új cikk", "Create")
</p>
<table>
    <tr>
        <th>
            Cím
        </th>
        <th>
            Szerző
        </th>
        <th>
            PDF
        </th>
        <th>
            Újság
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PdfUri)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Newspaper.Title)
        </td>
        <td>
            @Html.ActionLink("Szerkesztés", "Edit", new { id=item.ArticleId }) |
            @Html.ActionLink("Részletek", "Details", new { id=item.ArticleId }) |
            @Html.ActionLink("Törlés", "Delete", new { id=item.ArticleId })
        </td>
    </tr>
}

</table>
